<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joshuarichardson.fivewaystowellbeing">

    <application
        android:name=".HiltApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.view.AddMissedDayActivity"
            android:label="@string/missed_days_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LearnMoreAboutFiveWaysActivity"
            android:label="@string/learn_more_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.individual_surveys.IndividualSurveyActivity"
            android:label="@string/launch_view_surveys"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.pass_times.edit.CreateOrUpdatePassTimeActivity"
            android:label="@string/launch_create_activity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AnswerSurveyActivity"
            android:label="@string/launch_answer_survey" />
        <activity
            android:name=".ui.pass_times.edit.ViewPassTimesActivity"
            android:label="@string/launch_view_pass_time"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.wellbeing_support.WellbeingSupportWebViewActivity"
            android:label="@string/get_wellbeing_support"
            android:parentActivityName=".ui.wellbeing_support.WellbeingSupportActivity" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.wellbeing_support.WellbeingSupportActivity"
            android:label="@string/get_wellbeing_support"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.Launcher"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="${analytics_deactivated}" />
        <receiver
            android:name=".physical_activity_tracking.ActivityReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".notifications.SendCompleteSurveyNotificationBroadcastReceiver"
            android:enabled="true"
            android:process=":remote" /> <!-- References https://stackoverflow.com/a/12034402/13496270 , https://developer.android.com/guide/components/broadcast-exceptions -->
        <receiver
            android:name=".notifications.DeviceBootedBroadcastReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":remote">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <service
            android:name=".physical_activity_tracking.ActivityDurationIntentService"
            android:exported="false" />
        <service
            android:name=".physical_activity_tracking.AddPhysicalActivityIntentService"
            android:exported="false" />
    </application>
    <permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <permission android:name="android.permission.WAKE_LOCK" />
    <permission android:name="android.permission.INTERNET" />
    <permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

</manifest>