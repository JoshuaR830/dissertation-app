<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joshuarichardson.fivewaystowellbeing">

    <application
        android:name=".HiltApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LearnMoreAboutFiveWaysActivity" android:parentActivityName=".MainActivity" android:label="@string/learn_more_title"></activity>
        <activity android:name=".ui.individual_surveys.IndividualSurveyActivity" />
        <activity
            android:name=".CreatePassTimeActivity"
            android:label="@string/launch_create_activity" />
        <activity
            android:name=".AnswerSurveyActivity"
            android:label="@string/launch_answer_survey" />
        <activity
            android:name=".ui.view.ViewPassTimesActivity"
            android:label="@string/launch_view_pass_time" />
        <activity
            android:name=".ui.wellbeing_support.WellbeingSupportWebViewActivity"
            android:label="@string/get_wellbeing_support"
            android:parentActivityName=".ui.wellbeing_support.WellbeingSupportActivity" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.wellbeing_support.WellbeingSupportActivity"
            android:label="@string/get_wellbeing_support"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Disable analytics while debugging https://stackoverflow.com/a/40961374/13496270 -->
        <meta-data
            android:name="firebase_analytics_collection_deactivated"
            android:value="${analytics_deactivated}" />
    </application>
    <permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <permission android:name="android.permission.WAKE_LOCK" />

    <permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>