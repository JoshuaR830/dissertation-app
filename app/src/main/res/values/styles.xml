<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="lineColor">@color/black12Percent</item>

        <item name="textAllCaps">false</item>

        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>

        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <item name="sliderStyle">@style/Widget.App.Slider</item>

        <item name="android:textViewStyle">@style/Widget.App.TextView</item>

        <item name="android:windowBackground">@drawable/gradient_background</item>

        <item name="materialButtonStyle">@style/Widget.App.ButtonStyle</item>

        <item name="chipStyle">@style/Widget.App.ChipStyle</item>

        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

        <item name="materialTextButton">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>


    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Widget.App.ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@color/black12Percent</item>
    </style>

    <style name="Widget.App.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <!-- How to theme all checkboxes https://material.io/components/checkboxes/android#theming-checkboxes -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
</resources>