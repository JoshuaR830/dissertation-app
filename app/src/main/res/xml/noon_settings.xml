<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:key="notification_noon_switch"
        android:title="Noon"
        app:summary="Set noon notification"
        app:useSimpleSummaryProvider="true"
        app:icon="@drawable/icon_notification_noon">
    </SwitchPreference>

    <Preference
        android:title="Time"
        android:key="notification_noon_time"
        app:summary="Set noon notification time"
        app:useSimpleSummaryProvider="true">
    </Preference>
</PreferenceScreen>